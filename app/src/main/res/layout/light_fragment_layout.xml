<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/colorAppBackgroundLight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"

        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="5"
            android:layout_weight="3"

            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_weight="3"
                android:gravity="top"

                tools:ignore="NestedWeights">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="8"
                    android:layout_weight="1"

                    ><Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/menuButton"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/btn_cooking_mode"
                    android:layout_weight="3"
                    android:gravity="top"
                    android:contentDescription="@string/layout_selector"
                    />
            </LinearLayout>


            <TextView
                    android:id="@+id/operationLine"
                    style="@style/colorDisplayTextLight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:letterSpacing="-0.04"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/seguisb"
                    android:textAlignment="textEnd"
                    android:maxLines="2"
                    android:textSize="40sp"
                    android:layout_weight="4"
                    android:lineSpacingMultiplier="1"
                    android:contentDescription="@string/evaluation_line"
                    />
        </LinearLayout>

        <TextView
                android:id="@+id/resultLine"
                style="@style/colorDisplayTextLight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:gravity="end"
                android:layout_marginEnd="16dp"
                android:ellipsize="none"
                android:textSize="46sp"
                android:fontFamily="@font/seguisb"
                android:letterSpacing="-0.04"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:layout_weight="2"
                android:contentDescription="@string/result_line"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="7"


            android:baselineAligned="false">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"

                tools:ignore="NestedWeights">

            <Button
                    android:id="@+id/btn_reset"
                    style="@style/buttonOperationResetLight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/reset_button"
                    android:maxLines="1"
                     />

            <Button
                    android:id="@+id/btn_seven"
                    style="@style/buttonNumberSevenLight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/button_7"
                     />

            <Button
                    android:id="@+id/btn_four"
                    style="@style/buttonNumberFourLight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/button_4"
                     />

            <Button
                    android:id="@+id/btn_one"
                    android:layout_weight="1"
                    style="@style/buttonNumberOneLight"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/button_4"
                     />

            <Button
                    android:id="@+id/btn_zero"
                    style="@style/buttonNumberZeroLight"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/button_0"
                     />

        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_weight="1"

                android:layout_marginBottom="8dp"
                >

            <Button
                    android:id="@+id/btn_percentage"
                    style="@style/buttonOperationPercentageLight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:maxLines="1"
                    android:contentDescription="@string/button_percentage"
                    />

            <Button
                    android:id="@+id/btn_eight"
                    style="@style/buttonNumberEightLight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/button_8"
                    />

            <Button
                    android:id="@+id/btn_five"
                    style="@style/buttonNumberFiveLight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/button_5"
                    />

            <Button
                    android:id="@+id/btn_two"
                    style="@style/buttonNumberTwoLight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/button_2"
                    />

            <Button
                    android:id="@+id/btn_dot"
                    style="@style/buttonNumberDotLight"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/button_dot"
                    />

        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                >

            <Button
                    android:id="@+id/btn_divide"
                    style="@style/buttonOperationDivideLight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:maxLines="1"
                    android:contentDescription="@string/button_division"
                    />

            <Button
                    android:id="@+id/btn_nine"
                    style="@style/buttonNumberNineLight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/button_9"
                    />

            <Button
                    android:id="@+id/btn_six"
                    style="@style/buttonNumberSixLight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/button_6"
                    />

            <Button
                    android:id="@+id/btn_three"
                    style="@style/buttonNumberThreeLight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/button_3"
                    />

            <Button
                    android:id="@+id/btn_back"
                    style="@style/buttonOperationBackspaceLight"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/button_backspace"
                    />

        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                >

            <Button
                    android:id="@+id/btn_multiple"
                    style="@style/buttonOperationMultiplyLight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:maxLines="1"
                    android:contentDescription="@string/button_multiply"
                    />

            <Button
                    android:id="@+id/btn_minus"
                    style="@style/buttonOperationMinusLight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/button_minus"
                    />

            <Button
                    android:id="@+id/btn_plus"
                    style="@style/buttonOperationPlusLight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/button_plus"
                    />

            <Button
                    android:id="@+id/btn_equal"
                    style="@style/buttonOperationEqualDarkT"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:contentDescription="@string/button_equal"
                    />
        </LinearLayout>
            </LinearLayout>
</LinearLayout>