<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"



                                                   style="@style/colorAppBackgroundDarkT"
                                                   android:layout_width="fill_parent"
                                                   android:layout_height="fill_parent"
                                                   android:gravity="end"
                                                   android:orientation="vertical"
                                                   android:weightSum="7"


>


    <TextView
            android:id="@+id/operationLine"
            style="@style/colorDisplayTextLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0123opline"
            android:fontFamily="@font/seguisb"

            android:textSize="40sp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/resultLine"
            style="@style/colorDisplayTextLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seguisb"
            android:letterSpacing="-0.02"
            android:singleLine="true"
            android:text="0123resline"
            android:textSize="70sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.947"
            app:layout_constraintTop_toBottomOf="@+id/operationLine"/>


    <Button
            android:id="@+id/btn_reset"
            style="@style/buttonOperationResetLight"

            android:maxLines="1"



            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"


            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_seven"/>

    <Button
            android:id="@+id/btn_seven"
            style="@style/buttonNumberSevenLight"




            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_four"/>

    <Button
            android:id="@+id/btn_four"
            style="@style/buttonNumberFourLight"


            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_one"/>

    <Button
            android:id="@+id/btn_one"

            style="@style/buttonNumberOneLight"


            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_zero"/>

    <Button
            android:id="@+id/btn_zero"
            style="@style/buttonNumberZeroLight"
            android:layout_gravity="center"


            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
    />


    <Button
            android:id="@+id/btn_percentage"
            style="@style/buttonOperationPercentageLight"




            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_eight" app:layout_constraintStart_toEndOf="@+id/btn_reset"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/btn_eight"
            style="@style/buttonNumberEightLight"




            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_five" app:layout_constraintStart_toEndOf="@+id/btn_seven"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/btn_five"
            style="@style/buttonNumberFiveLight"



            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_two" app:layout_constraintStart_toEndOf="@+id/btn_four"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/btn_two"
            style="@style/buttonNumberTwoLight"




            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_dot" app:layout_constraintStart_toEndOf="@+id/btn_one"
            android:layout_marginStart="8dp"/>


    <Button
            android:id="@+id/btn_dot"
            style="@style/buttonNumberDotLight"





            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toEndOf="@+id/btn_zero" android:layout_marginStart="8dp"/>


    <Button
            android:id="@+id/btn_divide"
            style="@style/buttonOperationDivideLight"



            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_nine" app:layout_constraintStart_toEndOf="@+id/btn_percentage"
            android:layout_marginStart="8dp"/>


    <Button
            android:id="@+id/btn_nine"
            style="@style/buttonNumberNineLight"




            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_six" app:layout_constraintStart_toEndOf="@+id/btn_eight"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/btn_six"
            style="@style/buttonNumberSixLight"




            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_three" app:layout_constraintStart_toEndOf="@+id/btn_five"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/btn_three"
            style="@style/buttonNumberThreeLight"




            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_back" app:layout_constraintStart_toEndOf="@+id/btn_two"
            android:layout_marginStart="8dp"/>


    <Button
            android:id="@+id/btn_back"
            style="@style/buttonOperationBackspaceLight"



            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_dot" android:layout_marginStart="8dp"/>


    <Button
            android:id="@+id/btn_multiple"
            style="@style/buttonOperationMultiplyLight"


            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn_minus"
            app:layout_constraintStart_toEndOf="@+id/btn_divide" android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/btn_minus"

            style="@style/buttonOperationMinusLight"



            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_nine"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_plus"/>

    <Button
            android:id="@+id/btn_plus"
            style="@style/buttonOperationPlusLight"



            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_six"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_equal"/>


    <Button
            android:id="@+id/btn_equal"
            style="@style/buttonOperationEqualDarkT"



            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/btn_back" android:layout_marginStart="8dp"/>
    <Button
            android:layout_width="52dp"
            android:layout_height="40dp"
            android:id="@+id/menuButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background = "@drawable/btn_cooking_mode"
    />


</androidx.constraintlayout.widget.ConstraintLayout>