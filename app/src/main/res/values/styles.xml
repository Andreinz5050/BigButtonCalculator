<resources xmlns:fancy="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->




    <!-- Specific Feed activity theme -->
    <style name="FeedActivityThemeLight" parent="Theme.Material_Light" >
        <item name="android:windowBackground">@color/colorAppBackground</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    <style name="FeedActivityThemeDark" parent="Theme.Material_Dark">
        <item name="android:windowBackground">@color/colorAppBackgroundDarkT</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>


    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>




    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">54sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>


        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">2dp</item>

        <item name="android:layout_margin">2dp</item>

        <item name="android:layout_weight">1</item>



        <item name="android:minHeight">55dp</item>


    </style>


    <style name="buttonDeleteLight" >

        <item name="android:textSize">54sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">55dp</item>

        <item name="android:textColor">@color/colorDisplayText</item>

        <item name="android:background">@drawable/button_main_delete</item>




    </style>


    <style name="buttonNumberLight" >

        <item name="android:textSize">54sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">55dp</item>

        <item name="android:textColor">@color/colorDisplayText</item>

        <item name="android:background">@drawable/button_main_number</item>


    </style>

    <style name="buttonOperationLight" >

        <item name="android:onClick">onOperationClick</item>
        <item name="android:textSize">54sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">55dp</item>



        <item name="android:background">@drawable/button_main_operation</item>

    </style>

    <style name="buttonOperationPercentageLight" parent="buttonOperationLight" >

        <item name="android:textColor">@color/colorPercentageButton</item>
        <item name="android:background">@drawable/button_main_operation_percentage</item>

    </style>

    <style name="buttonOperationDivideLight" parent="buttonOperationLight" >

        <item name="android:textColor">@color/colorDivideButton</item>
