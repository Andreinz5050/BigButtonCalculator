    <style name="buttonOperationPlusLight" parent="buttonOperationLight" >

        <item name="android:textColor">@color/colorPlusButton</item>
        <item name="android:background">@drawable/button_main_operation_plus</item>

    </style>

    <style name="buttonOperationEqualLight" parent="buttonOperationLight" >


        <item name="android:textSize">65sp</item>
        <item name="android:layout_height">154sp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@color/colorEqualButton</item>
        <item name="android:background">@drawable/button_main_operation_equal</item>

    </style>

